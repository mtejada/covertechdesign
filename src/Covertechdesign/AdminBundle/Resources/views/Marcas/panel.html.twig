<div class="panel panel-red">
    <div class="panel panel-heading" style="margin-bottom: 0px;">
        <h3 class="panel-title" style="float:left;">Marcas</h3><a style="cursor: pointer;float:right;" id="new_marca" onclick="newMarca();"><span class="glyphicon glyphicon-plus" style="font-size: 30px;margin-top:-10px;text-align:right;color:white;"></span></a>
        <div style="clear: both;"></div>
    </div>
    <div class="panel panel-body" style="padding-top: 0px;">
        <script type="text/javascript">
            function newMarca(){
            window.open('{{path('abm_marcas_new' )}}','newMarca', "width=795, height=380");
            }
        </script>
        <div class="table-responsive">
            {% if marcas|length >0 %}
                <table class="table table-bordered table-hover table-striped">

                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for marca in marcas %}
                            <tr>
                                <td>{{marca.nombre}}</td>
                                <td>ver tags</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info" role="alert">No se encontraron marcas</div>
            {% endif %}
        </div>
    </div>
</div>
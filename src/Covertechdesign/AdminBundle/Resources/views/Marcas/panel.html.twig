<div class="panel panel-red">
    <div class="panel panel-heading">
        <h3 class="panel-title">Marcas</h3>
    </div>
    <div class="panel panel-body">
        <div class="row">
            <a id="new_marca" onclick="newMarca();">nueva marca</a>
        </div>
        <script type="text/javascript">
            function newMarca(){
            window.open('{{path('abm_marcas_new' )}}','newMarca', "width=200, height=200");
            }
        </script>
        <div class="table-responsive">
            {% if marcas|length >0 %}
                <table class="table table-bordered table-hover table-striped">

                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for marca in marcas %}
                            <tr>
                                <td>{{marca.nombre}}</td>
                                <td>ver tags</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info" role="alert">No se encontraron marcas</div>
            {% endif %}
        </div>
    </div>
</div>
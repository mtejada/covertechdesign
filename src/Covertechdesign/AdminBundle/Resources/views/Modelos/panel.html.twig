<div class="panel panel-green">
    <div class="panel panel-heading" style="margin-bottom: 0px;">
       <h3 class="panel-title" style="float:left;">Modelos</h3><a style="cursor: pointer;float:right;" id="new_modelo" onclick="newModelo();"><span class="glyphicon glyphicon-plus" style="font-size: 30px;margin-top:-10px;text-align:right;color:white;"></span></a>
        <div style="clear: both;"></div>
    </div>
    <div class="panel panel-body" style="padding-top: 0px;">
        <script type="text/javascript">
            function newModelo(){
            window.open('{{path('abm_modelos_new' )}}','newModelo', "width=795, height=450");
            }
        </script>
        <div class="table-responsive">
            {% if modelos|length >0 %}
                <table class="table table-bordered table-hover table-striped">

                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Marca</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for modelo in modelos %}
                            <tr>
                                <td>{{modelo.nombre}}</td>
                                <td>{{modelo.idmarca.nombre}}</td>
                                <td>ver tags</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info" role="alert">No se encontraron modelos</div>
            {% endif %}
        </div>
    </div>
</div>